<%= form_for(@enquiry, url: sharent_create_enquiry_path) do |f| %>
  <% if @enquiry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@enquiry.errors.count, "error") %> prohibited this enquiry from being saved:</h2>

      <ul>
      <% @enquiry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :pg_id, value: @enquiry.pg_id, readonly: true %>
  </div>
  <div class="field">
    <%= f.label :pg_name %><br>
    <%= f.text_field :pg_name, value: Pg.find(@enquiry.pg_id).pg_name, readonly: true %>
  </div>
  <div class="field">
    <%= f.label :full_name %><br>
    <%= f.text_field :full_name %>
  </div>
  <div class="field">
    <%= f.label :mobile_number %><br>
    <%= f.text_field :mobile_number %>
  </div>
  <div class="field">
    <%= f.label :number_of_seats %><br>
    <%= f.number_field :number_of_seats %>
  </div>
  <div class="field">
    <%= f.label :room_type_id %><br>
    <%= f.collection_select :room_type_id, RoomType.all, :id, :desc %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
