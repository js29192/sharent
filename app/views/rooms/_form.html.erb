<%= form_for(@room) do |f| %>
  <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% @room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :pg_id, value: @room.pg_id, readonly: true %>
  </div>
  <div class="field">
    <%= f.label :room_number %><br>
    <%= f.text_field :room_number %>
  </div>
  <div class="field">
    <%= f.label :room_type_id %><br>
    <%= f.collection_select :room_type_id, room_types, :id, :desc, {prompt: "Select Room Type"} %>
  </div>
  <div class="field">
    <%= f.label :floor_id %><br>
    <%= f.collection_select :floor_id, floors, :id, :desc, {prompt: "Select Floor"} %>
  </div>
  <div class="field">
    <%= f.label :number_of_beds %><br>
    <%= f.number_field :number_of_beds %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
